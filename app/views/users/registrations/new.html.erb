<h2>Sign up</h2>

  <div class="user_form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :username %><br/>
        <%= f.text_field :username, autofocus: true  %><br/>
      </div>
      <br/>
      <div class="field">
        <%= f.label :email %><br/>
        <%= f.email_field :email%>
      </div>
      <br/>

      <% if f.object.password_required? %>
        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %><br/>
        </div>
        <br/>
        <div class="field">
          <%= f.label :password_confirmation %><br/>
          <%= f.password_field :password_confirmation, autocomplete: "off" %><br/>
        </div>
      <% end %>

      <br/>
      <div class="field">
        <%= f.label :department_id %><br/>
        <%= f.select :department_id, options_for_select([['Astronomy', 1], ['Biology', 2], ['Chemistry', 3], ['Geology', 4], ['Psychology', 5]]) %><br/>
      </div>
      <br/>
      <div class="field">
        <%= f.label "Professor?" %>
        <%= f.check_box :professor %> <br/>
    </div><br/>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>

